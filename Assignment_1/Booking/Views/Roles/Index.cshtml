@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<div class="row">
	<div class="col-6">
		<h1>All Roles</h1>
	</div>
	<div class="col-6">
		<a asp-action="NewRole" class="btn btn-success right">Create New Role</a>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<table class="table table-hover table-striped">
			<thead>
				<tr>
					<th>Role Name</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Name</td>
						<td>
							<a title="Edit" asp-action="NewRole" asp-route-Id="@item.Id">
								Edit
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
