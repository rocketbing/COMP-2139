@model IEnumerable<Booking.Dtos.GetUsersDto>
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-6">
        <h1>All Users</h1>
    </div>
    <div class="col-6">
        <a asp-action="NewUser" class="btn btn-success right">Create New User</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <!-- Add Country Button-->

        <table class="table table-hover table-striped">
            <thead class="text-navy text-wrap">
                <tr>
                    <th>Name</th>
                    <th>Username (Login)</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.UserName</td>
                            <td>@item.RoleName</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>